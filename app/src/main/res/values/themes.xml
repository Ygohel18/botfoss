<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BOT" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/text_color_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/text_color_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="OpenToolImageView">
        <item name="alpha">0.87</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HistoryImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ToolTitleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolCardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="ToolCardInnerLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="background">@drawable/sample_white</item>
    </style>

    <style name="HistoryCardInnerLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="background">@drawable/sample_white</item>
    </style>

    <style name="ToolCardOuterLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="SettingMainListCardVisible" parent="SettingMainListCard">
        <item name="android:visibility">visible</item>
    </style>

    <style name="SettingMainListCardHidden" parent="SettingMainListCard">
        <item name="android:visibility">gone</item>
    </style>

    <style name="SettingMainListCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SettingMainListTextLayoutSwitch" parent="SettingMainListTextLayout">
        <item name="android:layout_weight">7</item>
    </style>

    <style name="SettingMainListTextLayoutLink" parent="SettingMainListTextLayout">
        <item name="android:layout_weight">9</item>
    </style>

    <style name="SettingMainListCardLayoutSwitch" parent="SettingMainListCardLayout">
        <item name="android:weightSum">10</item>
    </style>

    <style name="SettingMainListCardLayoutLink" parent="SettingMainListCardLayout">
        <item name="android:weightSum">9</item>
    </style>

    <style name="AppWhitePrimaryExtendedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:visibility">visible</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SettingMainListCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingMainListTextLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingMainTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingMainListIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="SettingLinkListIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingLinkListSwitch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">2</item>
        <item name="useMaterialThemeColors">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingLinkListIconEnd">
        <item name="android:src">@drawable/ic_round_open_in_new_24</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingMainListSubtitle" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingMainListTitle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>